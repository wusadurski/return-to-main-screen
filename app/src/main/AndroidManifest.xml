<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wsadurski.returntomainscreen"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ReturnToMainScreenApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme">
        <activity
            android:name=".RootActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AutoCloseableActivityOne"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AutoCloseableActivityTwo"
            android:screenOrientation="portrait" />

        <activity
            android:name=".AutoCloseableActivityThree"
            android:screenOrientation="portrait" />
    </application>

</manifest>